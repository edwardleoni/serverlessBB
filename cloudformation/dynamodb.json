{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "DynamoDB tables",
    "Resources": {
        "BoardsTable": {
            "Type" : "AWS::DynamoDB::Table" ,
            "Properties": {
                "TableName": "boards",
                "BillingMode": "PAY_PER_REQUEST",
                "AttributeDefinitions": [
                    {
                        "AttributeName": "id",
                        "AttributeType": "S"
                    },
                    {
                        "AttributeName": "name",
                        "AttributeType": "S"
                    },
                    {
                        "AttributeName": "last_question",
                        "AttributeType": "S"
                    },
                    {
                        "AttributeName": "last_question_time",
                        "AttributeType": "S"
                    }
                ],
                "KeySchema": [
                    {
                        "AttributeName" : "id",
                        "KeyType" : "HASH"
                    }
                ],
            }
        }
    }
}
